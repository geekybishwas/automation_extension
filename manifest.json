{
  "manifest_version": 3,
  "name": "LinkedIn Connect Automation",
  "version": "1.0",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*"
    ]
  }
}
