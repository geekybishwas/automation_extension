{
  "manifest_version": 3,
  "name": "Reasonyx: B2B email and phone finder + LinkedIn automation",
  "description": "Helps users streamline professional networking actions on supported pages.",
  "version": "1.0.1",
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "https://app.reasonyx.com/*",
      "https://app.dev.reasonyx.com/*",
      "http://localhost:3000/*"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
  